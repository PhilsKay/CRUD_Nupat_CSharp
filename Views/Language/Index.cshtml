@model List<Languages>
@{
    ViewData["Title"] = "Home Page";
}
<html>
<head>
    <title style="color:indigo">@ViewData["Title"] - Mvc Database language list</title>
</head>
<body>
    <div class="row pt-4">
        <div class="col-6">
            <h2 style="color:blue" class="text-primary">Language List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Language" asp-action="Add" style="text-align:right">
                <p style="color:white; background-color:blue;" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp; Create new category</p>
            </a>
        </div>
    </div>
    <br />
    @if (Model.Count > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                       
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-route-Id="@item.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    Edit
                                </a>
                                <a asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No language exist</p>
    }

</body>
</html>